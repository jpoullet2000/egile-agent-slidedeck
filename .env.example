# ============================================================
# SLIDE DECK AGENT - CONFIGURATION
# ============================================================

# ------------------------------------------------------------
# LLM API Keys (Required - at least one)
# Priority for agent: XAI -> Mistral -> OpenAI
# Priority for content generation: XAI -> Anthropic -> OpenAI
# ------------------------------------------------------------

# xAI (Grok) - Recommended for creative content
XAI_API_KEY=your_xai_key_here
XAI_BASE_URL=https://api.x.ai/v1
XAI_MODEL=grok-4-1-fast-reasoning

# Mistral
MISTRAL_API_KEY=your_mistral_key_here
MISTRAL_MODEL=mistral-large-2512

# OpenAI
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4o-mini

# Anthropic Claude (for content generation)
ANTHROPIC_API_KEY=your_anthropic_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ------------------------------------------------------------
# Image Generation API Keys (Optional)
# ------------------------------------------------------------

# Replicate (Recommended)
REPLICATE_API_TOKEN=your_replicate_token_here

# Stability AI (Alternative)
STABILITY_API_KEY=your_stability_key_here

# ------------------------------------------------------------
# MCP Server Configuration
# ------------------------------------------------------------

# MCP server host
MCP_HOST=localhost

# MCP server port
MCP_PORT=8003

# MCP transport mode: stdio or sse
MCP_TRANSPORT=sse

# ------------------------------------------------------------
# AgentOS Configuration
# ------------------------------------------------------------

# AgentOS server host
AGENTOS_HOST=0.0.0.0

# AgentOS server port
AGENTOS_PORT=8000

# Database file for session persistence
DB_FILE=slidedeck_agent.db

# ------------------------------------------------------------
# General Configuration
# ------------------------------------------------------------

# Default audience
DEFAULT_AUDIENCE=general

# Output directory for presentations
OUTPUT_DIR=./presentations

# Image generation timeout (seconds)
IMAGE_GENERATION_TIMEOUT=60

# Logging
LOG_LEVEL=INFO

# Dry run mode
DRY_RUN_MODE=false
